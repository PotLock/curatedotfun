{
  "name": "curatedotfun",
  "version": "1.0.0",
  "devDependencies": {
    "concurrently": "^9.1.2",
    "prettier": "^3.3.3",
    "turbo": "latest"
  },
  "packageManager": "bun@1.0.27",
  "private": true,
  "scripts": {
    "dev": "concurrently \"cd backend && bun run dev\" \"cd frontend && bun run dev\"",
    "dev:pg": "concurrently \"cd backend && bun run dev:pg\" \"cd frontend && bun run dev\"",
    "build": "turbo run build",
    "start": "cd backend && npm run start",
    "db:up": "cd backend && npm run db:up",
    "db:push": "cd backend && npm run db:push",
    "db:migrate": "cd backend && npm run db:migrate",
    "db:migrate-sqlite-to-pg": "cd backend && bun run db:migrate-sqlite-to-pg",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:reset": "docker-compose down -v && docker-compose up -d",
    "docker:logs": "docker-compose logs -f",
    "pg:dev": "npm run docker:up && npm run dev:pg",
    "lint": "turbo run lint",
    "deploy:init": "fly launch && fly consul attach",
    "deploy": "fly deploy",
    "fmt": "prettier --write '**/*.{js,jsx,ts,tsx,json}'",
    "fmt:check": "prettier --check '**/*.{js,jsx,ts,tsx,json}'"
  },
  "type": "module"
}
