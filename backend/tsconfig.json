{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "composite": true,
    "baseUrl": ".",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "@curatedotfun/shared-db/*": ["../packages/shared-db/src/*"],
      "@curatedotfun/types/*": ["../packages/types/src/*"],
      "*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests"],
  "references": [
    { "path": "../packages/shared-db" },
    { "path": "../packages/types" }
  ]
}
