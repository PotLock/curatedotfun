{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false, // This package needs to emit JS and declaration files
    "declaration": true, // Generate .d.ts files
    "declarationMap": true, // Generate sourcemaps for .d.ts files
    "composite": true, // Required for project references and building this package
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@curatedotfun/types/*": ["../types/src/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"],
  "references": [{ "path": "../types" }]
}
